{
    "id": "sentences",
    "endpoint": {
      "url": "http://localhost:3030/intavia/query",
      "useAuth": false,
      "prefixesFile": "SparqlQueriesPrefixes.js"
    },
    "sparqlQueriesFile": "SparqlQueriesSentences.js",
    "baseURI": "http://www.intavia.eu/wikipedia/sentences",
    "facetClass": "wlink:Sentence",
    "frontPageImage": "main_page/works-452x262.jpg",
    "searchMode": "faceted-search",
    "defaultActiveFacets": [
      "prefLabel"
    ],
    "defaultTab": "table",
    "defaultInstancePageTab": "table",
    "includeInSitemap": true,
    "URITemplate": "<BASE_URI>/<LOCAL_ID>",
    "resultClasses": {
      "sentences": {
        "paginatedResultsConfig": {
          "tabID": 0,
          "component": "ResultTable",
          "tabPath": "table",
          "tabIcon": "CalendarViewDay",
          "propertiesQueryBlock": "sentencePropertiesFacetResults",
          "paginatedResultsAlwaysExpandRows": true,
          "paginatedResultsRowContentMaxHeight": 190,
          "pagesize": 30,
          "sortBy": null,
          "sortDirection": null
        },
        "instanceConfig": {
          "propertiesQueryBlock": "sentenceProperties",
          "instancePageResultClasses": {
            "instancePageTable": {
              "tabID": 0,
              "component": "InstancePageTable",
              "tabPath": "table",
              "tabIcon": "CalendarViewDay"
            },
            "instancePageExport": {
              "tabID": 1,
              "component": "Export",
              "tabPath": "export",
              "tabIcon": "CloudDownload",
              "pageType": "instancePage"
            }
          }
        }
      }
    },
    "properties": [
        {
            "id": "uri",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "onlyOnInstancePage": true
        },
        {
            "id": "prefLabel",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 300
        },
        {
            "id": "person",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "numberedList": true,
            "minWidth": 150
        },
        {
            "id": "reference",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 300
        },
        {
            "id": "dataset",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": true,
            "minWidth": 60
        }
    ],
    "facets": {
      "prefLabel": {
          "containerClass": "two",
          "facetType": "text",
          "filterType": "textFilter",
          "sortByPredicate": "rdfs:label",
          "textQueryProperty": "rdfs:label"
      },
      "person": {
          "containerClass": "six",
          "facetType": "list",
          "facetLabelPredicate": "rdfs:label",
          "filterType": "uriFilter",
          "searchField": true,
          "sortButton": true,
          "pieChartButton": true,
          "predicate": "^wlink:has_reference",
          "sortBy": "instanceCount",
          "sortByPredicate": "(^wlink:has_reference)/rdfs:label",
          "sortDirection": "desc"
      },
      "reference": {
          "containerClass": "six",
          "facetType": "list",
          "facetLabelPredicate": "rdfs:label",
          "filterType": "uriFilter",
          "searchField": true,
          "sortButton": true,
          "pieChartButton": true,
          "predicate": "wlink:references",
          "sortBy": "instanceCount",
          "sortByPredicate": "wlink:references/rdfs:label",
          "sortDirection": "desc"
      }
    }
  }